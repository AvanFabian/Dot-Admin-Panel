<div class="page-header">
  <div class="page-header-left">
    <h1>
      <span class="material-icons-outlined">person</span>
      {{employee.name}}
    </h1>
    <p class="page-subtitle">Employee Detail</p>
  </div>
  <div class="page-header-right">
    <a href="/employees" class="btn btn-outline">
      <span class="material-icons-outlined">arrow_back</span>
      Back
    </a>
    <a href="/employees/{{employee.id}}/edit" class="btn btn-warning">
      <span class="material-icons-outlined">edit</span>
      Edit
    </a>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <h2>Employee Information</h2>
  </div>
  <div class="card-body">
    <div class="detail-grid-2col">
      <div class="detail-row">
        <span class="detail-label">ID</span>
        <span class="detail-value">{{employee.id}}</span>
      </div>
      <div class="detail-row">
        <span class="detail-label">Full Name</span>
        <span class="detail-value">{{employee.name}}</span>
      </div>
      <div class="detail-row">
        <span class="detail-label">Email</span>
        <span class="detail-value">{{employee.email}}</span>
      </div>
      <div class="detail-row">
        <span class="detail-label">Phone</span>
        <span class="detail-value">{{#if employee.phone}}{{employee.phone}}{{else}}<em class="text-muted">Not provided</em>{{/if}}</span>
      </div>
      <div class="detail-row">
        <span class="detail-label">Position</span>
        <span class="detail-value"><strong>{{employee.position}}</strong></span>
      </div>
      <div class="detail-row">
        <span class="detail-label">Department</span>
        <span class="detail-value">
          {{#if employee.department}}
          <a href="/departments/{{employee.department.id}}" class="badge badge-primary">
            {{employee.department.name}}
          </a>
          {{else}}
          <span class="badge badge-muted">Unassigned</span>
          {{/if}}
        </span>
      </div>
      <div class="detail-row">
        <span class="detail-label">Hire Date</span>
        <span class="detail-value">{{formatDate employee.hire_date}}</span>
      </div>
      <div class="detail-row">
        <span class="detail-label">Salary</span>
        <span class="detail-value"><strong>{{formatCurrency employee.salary}}</strong></span>
      </div>
      <div class="detail-row">
        <span class="detail-label">Created At</span>
        <span class="detail-value">{{formatDate employee.created_at}}</span>
      </div>
      <div class="detail-row">
        <span class="detail-label">Updated At</span>
        <span class="detail-value">{{formatDate employee.updated_at}}</span>
      </div>
    </div>
  </div>
</div>
